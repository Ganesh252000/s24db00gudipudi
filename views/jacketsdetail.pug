extends layout
block content
    h1= title
    if (toShow == null)
       h2 No instance to detail
    else
    - let jacketid = toShow._id
    - let jacket_name = toShow.jacket_name
    - let jacket_brand = toShow.jacket_brand
    - let cost = toShow.cost
    div
        div.row
        div(class='jacketsAttr mr-3') jacketid ID is:
        div #{jacketid}
        div.row
        div(class='jacketsAttr mr-3') jacket name Type is:
        div #{jacket_name}
        div.row
        div(class='jacketsAttr mr-3') jacket brand are for:
        div #{jacket_brand}
        div.row
        div(class='jacketsAttr mr-3') cost Cost is:
        div #{cost}